# program bindings

# terminal
super + Return
	alacritty

# browser
super + b
	firefox
super + shift + b
	firefox --private-window

# program launcher
super + @space
	rofi -theme $(cat ~/.dotfiles/.current) -show run

# rofi calc
super + c
	rofi -theme $(cat ~/.dotfiles/.current) -show calc -modi calc -no-show-match -no-sort

# screenshot utility
Print
	flameshot gui
shift + Print
	flameshot screen -p ~/downloads

# custom power menu
super + alt + p
	~/.dotfiles/scripts/powermenu.sh

# change theme
super + alt + c
	~/.dotfiles/scripts/change-theme.sh

# virtual machines
super + v
	qemu-system-x86_64 -k en-us -enable-kvm -cpu host -m 4096 -smp 2 -drive file=/var/lib/libvirt/images/ArchLab.raw,format=raw
super + shift + v
	qemu-system-x86_64 -k en-us -enable-kvm -cpu host -m 4096 -smp 2 -drive file=/var/lib/libvirt/images/42VM.raw,format=raw

# reload config file
super + Escape
	pkill -USR1 -x sxhkd

# audio controls
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume 
	pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute 
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# screen brightness controls
XF86MonBrightnessUp
	xbacklight -inc 5
XF86MonBrightnessDown
	xbacklight -dec 5


# bspwm hotkeys

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close a node (window)
super + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# create/delete a new desktop in the currently focused monitor
super + n
	export DESKTOP_COUNT=$((DESKTOP_COUNT+1)); \
	bspc monitor -a $DESKTOP_COUNT; \
	bspc desktop -f next.local
super + shift + n
	bspc desktop -r

# state/flags

# set the window state
super + {t,s}
	bspc node -t {pseudo_tiled,floating}

# toggle fullscreen
super + f
	bspc node -t fullscreen || bspc node -t tiled

# focus/swap

# focus/swap the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# swap the focused desktop with the desktop in the given direction
super + shift + bracket{left,right}
	bspc desktop -s {west:focused,east:focused} --follow

# focus the next/previous monitor
super + {_,shift + }Tab
	bspc monitor -f {next,prev}

# focus/send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# preselect

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# move/resize

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
