[colors]
background	= #0f0f0f
foreground	= #f0f0f0
red			= #ac8a8c
green		= #8aac8b
yellow		= #aca98a
blue		= #8f8aac
magenta		= #ac8aac
cyan		= #8aabac
grey		= #4c4c4c
orange		= #ceb188

[settings]
screenchange-reload = true

[bar/bar]
monitor				= ${env:MONITOR:}
wm-restack			= bspwm
width				= 95%
height				= 48
offset-x			= 2.5%
offset-y			= 2.5%
radius				= 15
fixed-center		= false
background			= ${colors.background}
foreground			= ${colors.foreground}
padding				= 3
module-margin		= 2
font-0				= FuraMono Nerd Font:style=Regular:size=12;1
modules-left		= bspwm
modules-center		= date check-battery
modules-right		= updates volume battery xbacklight cpu memory network
override-redirect	= false
cursor-click		= pointer
cursor-scroll		= ns-resize
line-size			= 3

[module/xwindow]
type			= internal/xwindow
label			= %title%
label-maxlen	= 60
format-padding	= 4

[module/workspaces]
type					= internal/xworkspaces
pin-workspaces			= true
icon-default			= 
format					= <label-state>
label-active			= 
label-occupied			= 
label-urgent			= 
label-empty				= 
label-empty-padding		= 1
label-active-padding	= 1
label-urgent-padding	= 1
label-occupied-padding	= 1

[module/launcher]
type				= custom/text
content				= 
content-foreground	= ${colors.blue}
content-padding		= 0
click-left			= rofi -show run

[module/spotify]
type						= custom/script
tail						= true
format-prefix				= "  "
format-prefix-foreground	= ${colors.green}
format						= <label>
exec						= ~/.config/polybar/scripts/spotify_status.sh

[module/volume]
type					= internal/pulseaudio
format-volume			= <ramp-volume> <label-volume>
label-volume			= %percentage%%
ramp-volume-0			= 奄
ramp-volume-1			= 奔
ramp-volume-2			= 墳
ramp-volume-foreground	= ${colors.magenta}
label-muted				= ﱝ
label-muted-foreground	= ${colors.magenta}

[module/xkeyboard]
type						= internal/xkeyboard
blacklist-0					= num lock
format-prefix				= " "
format-prefix-foreground	= ${colors.magenta}
label-layout				= %layout%
label-indicator-foreground	= ${colors.cyan}

[module/filesystem]
type								= internal/fs
interval							= 25
mount-0								= /
format-mounted						= <label-mounted>
format-mounted-prefix				= " "
format-mounted-prefix-foreground	= ${colors.green}
label-mounted						= %used%
format-unmounted					= <label-unmounted>
format-unmounted-prefix				=
label-unmounted						= %mountpoint%: not mounted

[module/updates]
type				= custom/script
exec				= ~/.config/polybar/scripts/check-updates.sh
interval			= 500
label-foreground	= ${colors.red}
click-left			= alacritty -e yay

[module/cpu]
type						= internal/cpu
interval					= 3
format-prefix				= " "
format-prefix-foreground	= ${colors.cyan}
label						= %percentage%%

[module/powermenu]
type				= custom/text
content				= 
content-foreground	= ${colors.red}
click-left			= ~/.dotfiles/themes/mountain/polybar/powermenu.sh

[module/memory]
type						= internal/memory
interval					= 3
format-prefix				= " "
format-prefix-foreground	= ${colors.green}
label						= %percentage_used%%

[module/date]
type						= internal/date
interval					= 1
format-prefix-foreground	= ${colors.blue}
time						= %H:%M - %A %d/%m/%Y
format-prefix				= " "
label						= %time%

[module/network]
type								= internal/network
interface							= wlp0s20f3
interval							= 3
unknown-as-up						= true
label-connected						= %essid%
format-connected-prefix				= "直 "
format-connected-prefix-foreground	= ${colors.orange}
format-connected					= <label-connected>
label-disconnected					= 睊
label-disconnected-foreground		= ${colors.orange}

[module/xbacklight]
type				= internal/xbacklight
ramp-0				= 
ramp-1				= 
ramp-2				= 
ramp-3				= 
ramp-foreground		= ${colors.yellow}
format				= <ramp> <label>

[module/battery]
type								= internal/battery
battery								= BAT0
adapter								= ADP1
poll-interval						= 5
ramp-capacity-0						= 
ramp-capacity-1						= 
ramp-capacity-2						= 
ramp-capacity-3						= 
ramp-capacity-4						= 
ramp-capacity-foreground			= ${colors.yellow}
label-charging						= %percentage%%
format-charging						= <ramp-capacity> <label-charging>
label-discharging					= %percentage%%
format-charging-prefix				= " "
format-charging-prefix-foreground	= ${colors.yellow}
format-discharging					= <ramp-capacity> <label-discharging>
format-full							= <ramp-capacity> <label-full>

[module/bspwm]
type						= internal/bspwm
label-focused				= %name%
label-empty					= %name%
label-occupied				= %name%
label-urgent				= %name%
label-separator				= |
label-separator-foreground	= ${colors.yellow}
label-separator-padding		= 1
label-dimmed-foreground		= ${colors.grey}
label-empty-foreground		= ${colors.grey}
label-occupied-foreground	= ${colors.grey}
label-urgent-foreground		= ${colors.red}
label-focused-padding		= 1
label-empty-padding			= 1
label-occupied-padding		= 1
label-urgent-padding		= 1
label-focused-underline		= ${colors.orange}

[module/check-battery]
type		= custom/script
exec		= ~/.dotfiles/scripts/check-battery.sh
interval	= 500
