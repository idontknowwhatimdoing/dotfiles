[colors]
background 	= #2E3440
foreground 	= #D8DEE9
red			= #BF616A
green		= #A3BE8C
yellow		= #EBCB8B
blue		= #81A1C1
magenta		= #B48EAD
cyan		= #88C0D0

[settings]
screenchange-reload = true

[bar/mybar]
monitor = ${env:MONITOR:}
wm-restack = i3
width = 100%:-40
offset-x = 20
override-redirect = true
height = 40
padding = 1
module-margin = 2
fixed-center = false
font-0 = FuraMono Nerd Font:style=Regular:size=16;1
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 5
modules-left = i3
modules-center = datetime
modules-right = updates battery audio xbacklight network 

[module/datetime]
type = internal/date
interval = 1
date = [%A] %d/%m/%Y
time = %H:%M
label = %date% - %time%
label-padding = 1
label-underline = ${colors.green}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
poll-interval = 5
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
label-charging =  %percentage%%
format-charging-padding = 1
format-charging-underline = ${colors.cyan}
format-charging = <ramp-capacity> <label-charging>
label-discharging = %percentage%%
format-discharging-padding = 1
format-discharging-underline = ${colors.cyan}
format-discharging = <ramp-capacity> <label-discharging>
format-full-padding = 1
format-full-underline = ${colors.cyan}
format-full = <ramp-capacity> <label-full>

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
