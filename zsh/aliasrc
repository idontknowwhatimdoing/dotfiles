alias ls='ls --color=auto'
alias grep='grep --color'
alias vim=nvim
alias vi=nvim
alias gacp="git add . ; git commit -m 'menfou' ; git push"
alias gcw='gcc -Wall -Werror -Wextra -g3 -O0'
alias valcheck='valgrind -q --leak-check=full --show-leak-kinds=all --track-origins=yes'
alias norm=norminette
alias make='make -s -j'
alias nc=ncat
alias ip='ip -color'
alias gdb="gdb -nh -x $XDG_CONFIG_HOME/gdb/init"
alias wget="wget --hsts-file=$XDG_CACHE_HOME/wget/hsts"
alias gpg="gpg --homedir $XDG_DATA_HOME/gnupg"
